<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogCreatePending"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:text="To Do List"
        android:textColor="@color/colorWithe"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/dayBtn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_accent"
        android:src="@mipmap/ic_wb_sunny_white_24dp" />

    <ImageButton
        android:id="@+id/nightBtn"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_accent"
        android:src="@mipmap/ic_brightness_3_white_24dp" />


</RelativeLayout>